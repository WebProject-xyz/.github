{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "WebProject.xyz organisation renovate config",
  "platform": "github",
  "assignees": [
    "fahl-design"
  ],
  "extends": [
    "local>ocramius/.github:renovate-config",
    "default:automergeBranchPush",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":label(dependencies)",
    ":gitSignOff",
    ":semanticPrefixChore"
  ],
  "commitBodyTable": true,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ],
    "automerge": true,
    "platformAutomerge": true,
    "automergeType": "pr"
  },
  "platformAutomerge": true,
  "prFooter": "[Read more information](https://github.com/WebProject-xyz/.github/blob/main/RENOVATE.md) about the use of [Renovate Bot](https://github.com/renovatebot/renovate).",
  "rangeStrategy": "replace",
  "rollbackPrs": true,
  "packageRules": [
    {
      "rangeStrategy": "bump"
    },
    {
      "matchPackagePatterns": [
        "symfony/"
      ],
      "groupSlug": "symfony",
      "groupName": "Symfony Packages",
      "automerge": false,
      "extends": [
        ":automergeDisabled",
        ":automergePr",
        ":label(Awaiting Maintainer Response)"
      ]
    },
    {
      "matchDepNames": [
        "php"
      ],
      "allowedVersions": "~8.2.0 || ~8.3.0",
      "extends": [
        ":automergeDisabled",
        ":automergePr",
        ":label(Awaiting Maintainer Response)"
      ],
      "ignoreUnstable": false,
      "groupName": "PHP"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "semver"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "extends": [
      ":automergeDisabled",
      ":automergePr",
      ":labels(security)"
    ],
    "rangeStrategy": "bump"
  }
}
